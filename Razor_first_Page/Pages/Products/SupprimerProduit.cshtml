@page "{id:int}"
@model Razor_first_Page.Pages.Products.SupprimerProduitModel
@{
}

<h1>Supprimer le produit: @Model.Product.Nom</h1>
<p>Etes-vous sur de vouloir supprimer ce produit ?</p>
<div>
	<p><strong>Nom:</strong> @Model.Product.Nom</p>
	<p><strong>Prix:</strong> @Model.Product.Prix</p>
	<p><strong>Description:</strong>
		@if (String.IsNullOrEmpty(@Model.Product.Description))
		{
			<span class="text-muted"> Aucune description</span>
		}
		else
		{
			@Model.Product.Description
		}
		</p>
	<p><strong>Categorie:</strong> @Model.Product.Categorie.Nom</p>
	<form method="post">
		<input asp-for="Product.Id" type="hidden" />
		<button class="btn btn-danger" type="submit">Oui</button>
		<button class="btn btn-default" type="reset">Annuler</button>
	</form>	
</div>